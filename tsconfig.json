{
  "extends": ["@tsconfig/strictest/tsconfig.json", "@tsconfig/recommended/tsconfig.json"],
  "include": ["src/**/*"],
  "compilerOptions": {
    "rootDir": "./src",
    "sourceMap": true,
    "lib": ["DOM", "DOM.Iterable"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true
  }
}
